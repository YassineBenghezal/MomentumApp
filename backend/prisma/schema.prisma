datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  xp        Int      @default(0)
  level     Int      @default(1)
  createdAt DateTime @default(now())

  Habit         Habit[]
  Task          Task[]
  HabitTracking HabitTracking[]
}

enum Frequency {
  daily
  weekly
  monthly
}

enum Status {
  EN_COURS
  COMPLETÉ
  ANNULÉ
}

enum Priority {
  HIGH
  MEDIUM
  LOW
}

enum Category {
  SPORTS
  FINANCES
  SANTÉ
  AUTRE
}

model Habit {
  id            Int             @id @default(autoincrement())
  name          String
  description   String?
  category      Category        @default(AUTRE)
  frequency     Frequency // Enum : daily, weekly, monthly
  occurrences   Int? // Nombre d'occurrences souhaitées dans la période (null = illimité)
  days          String[]        @default([]) // ["1", "3"] pour lundi, mercredi si hebdomadaire
  customDays    DateTime[]      @default([]) // Dates spécifiques si l'habitude n'est pas récurrente
  startDate     DateTime // Date de début de l'habitude
  endDate       DateTime? // Date de fin optionnelle
  userId        Int
  user          User            @relation(fields: [userId], references: [id])
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  HabitTracking HabitTracking[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  category    Category @default(AUTRE)
  priority    Priority @default(MEDIUM)
  deadline    DateTime
  completed   Boolean  @default(false)
  archived    Boolean  @default(false)
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model HabitTracking {
  id            Int       @id @default(autoincrement())
  date          DateTime // Date où l'habitude est validée
  lastTrackedAt DateTime?
  habitId       Int
  userId        Int
  createdAt     DateTime  @default(now())

  user  User  @relation(fields: [userId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])
}
